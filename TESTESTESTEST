local library = loadstring(game:HttpGet("https://raw.githubusercontent.com/MlFrvWM/BBLT81/main/BL81827TC", true))()

local window = library:AddWindow("Sad PRIVATE", {
    main_color = Color3.fromRGB(8, 7, 128),
    min_size = Vector2.new(740, 500),
    can_resize = false,
})

local function setFontRecursive(guiObject, font)
    for _, obj in pairs(guiObject:GetDescendants()) do
        if obj:IsA("TextLabel") or obj:IsA("TextButton") or obj:IsA("TextBox") then
            obj.Font = font
        end
    end
end

spawn(function()
    repeat wait() until window.gui
    setFontRecursive(window.gui, Enum.Font.SourceSansBold)
end)

local tabPlayer = window:AddTab("Player")
tabPlayer:AddButton("Exemplo", function()
    print("Botão funcionando com fonte SourceSansBold!")
end)
tabPlayer:AddSwitch("Ativar Algo", function(state)
    print("Switch ativado:", state)
end)
local dd = tabPlayer:AddDropdown("Escolha uma opção", function(option)
    print("Opção escolhida:", option)
end)
dd:Add("Opção 1")
dd:Add("Opção 2")

local tabRock = window:AddTab("Rock")
tabRock:AddSwitch("Auto Farm Rock", function(state)
    print("Auto Rock:", state)
end)
tabRock:AddButton("Coletar Rochas", function()
    print("Rochas coletadas!")
end)

local tabKiller = window:AddTab("Killer")
tabKiller:AddSwitch("Modo Assassino", function(state)
    print("Killer Mode:", state)
end)
tabKiller:AddButton("Executar Inimigo", function()
    print("Inimigo eliminado.")
end)

